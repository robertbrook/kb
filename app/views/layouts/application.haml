%html
  %head
    %title= (@title && @title != 'Knowledge Base') ? @title + " (Knowledge Base)" : "Knowledge Base"
    = stylesheet_link_tag 'screen', :media => 'screen'
    - if @javascripts
      - @javascripts.each do |js|
        = javascript_include_tag js
    = @atom if @atom
  %body#kb-parliament-uk
    #search= render :partial => 'search_form', :locals => {:term => h(@term) }
    - if @title 
      %span#title= link_to_unless_current("Knowledge Base", root_url) << '<h1 id="page-title">' << @title << '</h1>'
    - else
      %h1#title=  "Knowledge Base"    
    #content= yield
    = button_to "Enable #{@is_admin ? 'STANDARD USER functions' : 'ADMINISTRATOR functions'}" , :action => :toggle_admin
