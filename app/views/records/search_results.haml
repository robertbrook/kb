- @javascript = :defaults
- @title = 'Knowledge Base'

%div
  = render :partial => 'search_form', :locals => {:term => h(@term) }

- unless @records.blank?
  - pagination_links = will_paginate @records
  %p= pagination_links
  = render :partial => 'search_result', :collection => @records
  %p= pagination_links
- else
  %p
    Your search -
    %span.search_term= @term
    = ' - did not match any item names.'
  - if @spelling_correction
    %p.spelling_correction
      Did you mean:
      %a= link_to @spelling_correction, url_for(:action=> 'search', :q => @spelling_correction)
  %p Suggestions:
  %ul
    %li Make sure all words are spelled correctly.
    %li Try different keywords.
    %li Try more general keywords.