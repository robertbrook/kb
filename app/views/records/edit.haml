%h1 Editing record

= error_messages_for :record

- form_for(@record) do |f|
  %table.record
    = render :partial => 'table_header'
    %tbody
      %tr
        %td.name
          %p= f.text_field :title, :size => 18
        %td.name
          %p= f.text_field :first_name, :size => 18
        %td.name
          %p= f.text_field :middle_name, :size => 18
        %td.name
          %p= f.text_field :last_name, :size => 18
        %td.name
          %p= f.text_field :suffix, :size => 18
        %td.notes
          = f.text_area :note
        %td
          = @record.summary_attributes.collect { |attribute,value| "#{attribute}: #{value}" }.join('<br/>')
          = link_to_web_page(@record)
        %td= f.submit "Update"
        %td= link_to 'Show', record_path(@record)
        %td= link_to 'Destroy', record_path(@record), :confirm => 'Are you sure?', :method => :delete, :confirm => "Are you sure?", :method => :delete

= link_to 'Show', record_path(@record)
= link_to 'Back', records_path
